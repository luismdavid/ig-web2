<div class="container-fluid bg-dark text-light">
    <form action="/post/upload" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 mt-5 mb-5">
                <div class="form-group">
                    <label for="title">Titulo</label>
                    <input type="text" class="form-control" id="title" placeholder="Titulo" name="title">
                </div>
                <div class="form-group">
                    <label for="image">Example file input</label>
                    <input type="file" name="image" class="form-control-file" id="image" accept="image/*">
                </div>
                 <div class="form-group">
                    <label for="description">Descripcion</label>
                    <input type="text" class="form-control" id="description" placeholder="Descripcion" name="description">
                </div>
                <button type="submit" class="btn btn-primary">Subir imagen</button>
            </div>
        </div>
    </form>

</div>